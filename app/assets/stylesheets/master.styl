@import url('http://fonts.googleapis.com/css?family=Oleo+Script+Swash+Caps|Roboto+Slab')

@keyframes spin
  0%
    transform:rotate(0deg)
  50%
    transform:rotate(-180deg)
  100%
    transform:rotate(-360deg)

@keyframes scale
  0%
    transform:scale(1)
  25%
    transform:scale(0.5)
  50%
    transform:scale(1)
  75%
    transform:scale(0.5)
  100%
    transform:scale(1)

grey         = hsl(0, 0%, 70%)
light-grey   = hsl(0, 0%, 85%)
lighter-grey = hsl(0, 0%, 95%)
dark-grey    = hsl(0, 0%, 40%)
darker-grey  = hsl(0, 0%, 30%)
red          = hsl(360, 90%, 45%)
green        = hsl(159, 64%, 47%)
light-green  = hsla(159, 64%, 47%, 8%)

placeholder-color(color)
  ::-webkit-input-placeholder
    color: color
  :-moz-placeholder
    color: color
  ::-moz-placeholder
    color: color
  :-ms-input-placeholder
    color: color

dragging()
  *
    cursor: -webkit-grabbing !important
    cursor: -moz-grabbing !important

.dragging
  dragging()

a
  text-decoration: none

button
  background: none
  border: none
  &.green
    color: white
    background-color: green
    padding: 6px 14px
    border-radius: 3px
    font: .9em proxima-nova
    hover-lighten: 3

input
  border-radius: 3px
  border: thin solid light-grey
  box-sizing: border-box
  font: .9em proxima-nova
  font-weight: 600
  padding: 8px 12px

html
  height: 100%

body
  margin: 0
  height: 100%
  .body
    overflow: auto
  &.noscroll
    position: fixed
    overflow-y: scroll
    width: 100%

.loader
  position: relative
  width: 32px
  height: 32px
  animation: spin 4s infinite ease
  display: inline-block
  vertical-align: top
  margin: 29px 0 0 23px
  transition: opacity .5s
  opacity: 0
  i
    border-style: solid
    display: inline-block
    box-sizing: border-box
    border: 2px dashed green
    border-radius: 50px
    animation: scale 4s infinite linear
    height: 32px
    width: 32px

.modal
  display: none
  border: thin solid hsl(0, 0%, 75%)
  width: 405px
  background-color: white
  .luxhaven
    overflow: auto
    margin: 40px auto
  .message
    text-align: center
    margin-top: 12px
    font: .9em proxima-nova
    a
      color: hsl(0, 0%, 65%)
      &:hover
        color: green
        cursor: pointer
  .auth-error
    visibility: hidden
    text-align: center
    color: red
    font: 1em proxima-nova
    margin-top: 16px
    height: 19px
  form
    button
      width: 100%
      border-radius: 0
      margin-top: 15px
      padding: 10px
      font-size: 1em
    .input
      width: 310px
      margin: 10px auto
      placeholder-color: hsl(0, 0%, 79%)
      input
        color: hsl(0, 0%, 55%)
        width: 100%
  &#sign-in
    height: 325px
  &#sign-up
    height: 460px

.luxhaven
  width: 140px
  .name
    margin: 5px 0 0 40px
    font: 1.1em proxima-nova
    font-weight: 800
    color: hsl(0, 0%, 19%)
    text-transform: uppercase
  .logo
    float: left

header
  overflow: hidden
  height: 80px
  background-color: white
  box-shadow: 0 -1px 8px black
  opacity: .975
  position: absolute
  top: 0
  left: 0
  right: 0
  z-index: 1
  .pad
    margin: 25px auto
    width: 980px
    nav
      display: inline-block
      &.right, &.left
        margin-left: 50px
        a
          font: .9em proxima-nova
          color: hsl(0, 0%, 37%)
      &.left
        margin-left: 35px
        a
          margin-left: 25px
          font-weight: bold
          text-transform: uppercase
          &:hover
            color: green
      &.right
        float: right
        a
          margin-left: 15px
          font-weight: 400
          &:hover
            border-bottom: thin solid green
        button
          margin-left: 20px

footer
  background: url(/images/cross_scratches.png)
  height: 150px

.account-content
  margin: 150px auto
  width: 980px
  text-align: center

.booking-content
  margin: 150px auto
  width: 980px
  text-align: center

#content-below-container
  display: none
  #content-below
    height: 300px

#home
  background: url(/images/home.jpg) no-repeat
  &.head-image
    background-size: cover !important
    z-index: 0
    position: absolute
    bottom: 0
    top: 0
    width: 100%
    .overlay-container
      position: absolute
      bottom: 75px
      color: white
      font-family: proxima-nova
      width: 100%
      .overlay
        width: 965px
        margin: auto
        position: relative
        .left
          .title
            width: 450px
            font: 2.5em adelle
            font-weight: bold
            text-shadow: 1px 1px 2px black
          button
            margin-top: 25px
            font-size: 1em
            text-transform: uppercase
            padding: 10px 18px
        .right
          position: absolute
          bottom: 0
          right: 0
          .house-info
            text-align: right
            border-right: 4px solid white
            padding-right: 15px
            line-height: 23px
            .name
              font-weight: 600
            .location
              color: hsl(360, 0.5%, 85%)
              font-weight: 300
              font-size: .9em
              text-transform: uppercase

#city
  height: 375px
  .overlay-container
    top: 200px
    .overlay
      .title
        text-align: center
        font-size: 2em
        padding: 16px 28px
        background: hsla(0, 0%, 0%, 80%)

#results
  width: 976px
  margin: auto
  .left
    width: 250px
    float: left
    padding-right: 30px
    border-right: thin solid grey
    #filters
      > .title
        text-transform: uppercase
        font: .95em proxima-nova
        font-weight: bold
        color: darker-grey
        padding: 21px 0
        margin-bottom: 21px
        border-bottom: thin solid grey
      .filter-category
        margin-bottom: 100px
        .title
          width: 100%
          text-transform: uppercase
          font: .85em proxima-nova
          font-weight: bold
          color: darker-grey
          padding-bottom: 5px
          border-bottom: thin solid light-grey
        .filter
          margin-top: 8px
          & ~ .filter
            margin-top: 0
          label
            font: .8em proxima-nova
            font-weight: bold
            color: dark-grey
            display: inline-block
            padding: 8px
      > input, select
        width: 100%
      > input
        margin-bottom: 10px
        color: darker-grey
  .right
    overflow: auto
    .top
      margin: 0 29px
      padding: 19px 0 20px
      border-bottom: thin solid grey
      font-family: proxima-nova
      font-weight: bold
      color: darker-grey
      .title
        font-size: 1.1em
      .sort
        float: right
        .text
          text-transform: uppercase
          font-size: .8em
          display: inline-block
        .select2-container
          width: 135px !important
          a
            background: none
            border: none
            padding: 4px 0 3px 12px
            border-radius: 3px
            &:focus
              outline: none
            span
              color: green
              font: .9em proxima-nova
              font-weight: bold
              margin-top: 3px
            div
              border: none
              background: none
              top: 3px
              right: 2px
          &.select2-dropdown-open
            a
              border-radius: 3px 3px 0 0
    #listings
      .listing
        height: 330px
        margin: 20px 30px 30px
        border: thin solid #afafaf
        border-radius: 3px
        .picture
          height: 230px
          background-color: white
        .info-box
          background-color: green
          border-radius: 3px
          width: 137px
          height: 113px
          float: right
          margin: -30px 20px 0 0
          box-sizing: border-box
          padding: 15px 0 0 15px
          font-family: proxima-nova
          .price
            color: white
            font-size: 1.1em
            margin-bottom: 8px
            span
              font-weight: bold
          .rooms
            .room
              color: #cbf5e6
              &.people .icon
                background-image: url(/images/people-green.png)
              &.bedrooms .icon
                background-image: url(/images/bedrooms-green.png)
              &.baths .icon
                background-image: url(/images/baths-green.png)
        .title
          color: darker-grey
          font: 1.6em proxima-nova
          font-weight: bold
          margin: 25px 0 5px 20px
        .neighborhood
          color: grey
          margin-left: 20px
          font: .8em proxima-nova
          font-weight: bold
          text-transform: uppercase
        &:hover
          background-color: hsl(0, 0%, 96.5%)
    .pagination
      height: 35px
      margin: 30px 0 20px
      .typcn
        font-size: 2em
        margin: 0 25px
        &.next
          float: right
        &:hover
          color: green
          cursor: pointer

.rooms
  font-size: .9em
  .room
    overflow: auto
    .icon
      width: 24px
      height: 12px
      float: left
    .text
      margin: -2px 0 4px 34px
    &.people .icon
      background-image: url(/images/people.png)
    &.bedrooms .icon
      background-image: url(/images/bedrooms.png)
    &.baths .icon
      background-image: url(/images/baths.png)

.select2-drop
  border: thin solid light-grey !important
  .select2-highlighted
    background-color: green !important
  .select2-result-label
    font: .95em proxima-nova
  &.continuous
    border-top: none !important
    
.select2-bordered
  .select2-container
    margin-bottom: 10px
    a
      background: none
      border: thin solid light-grey
      padding: 4px 12px 3px
      border-radius: 3px
      &:focus
        outline: none
      span
        color: darker-grey
        font: .9em proxima-nova
        font-weight: bold
        margin-top: 3px
      div
        border: none
        background: none
        top: 3px
        right: 2px
    .select2-choice span
      margin-right: 0
    &.select2-dropdown-open
      a
        border-radius: 3px 3px 0 0

.slider
  position: relative
  overflow: auto
  width: 100%
  margin-top: 10px
  margin-bottom: 50px
  margin-left: 0px
  padding-bottom: 4px
  .title
    float: left
    font: .9em proxima-nova
    font-weight: bold
    color: hsl(0, 0%, 55%)
  > .selection
    font: .85em proxima-nova
    font-weight: bold
    float: right
    color: darker-grey
    .knob-one, .knob-two
      display: inline-block
  .bar
    margin-top: 28px
    background-color: hsl(0, 0%, 92%)
    height: 5px
    border-radius: 5px
    border: thin solid grey
  .knob
    width: 12px
    height: 12px
    border-radius: 10px
    border: thin solid darker-grey
    position: absolute
    top: 24px
    simple-gradient(hsl(159, 50%, 50%), 15%)
    &.one
      left: 0px
    &.two
      right: 0px
    &:hover
      cursor: -webkit-grab
      cursor: -moz-grab

.images
  position: relative
  overflow: auto
  ul
    padding: 0
    margin: 0
    li
      list-style: none
      float: left
      background-size: cover !important
      height: 500px
      width: 100%
  .dots
    text-align: center
    position: absolute
    left: 0
    right: 0
    bottom: 0
    li
      display: inline-block
      width: 10px
      height: 10px
      margin: 0 4px      
      text-indent: -999em
      border: 2px solid #fff
      border-radius: 6px
      cursor: pointer
      opacity: .4
      transition: background .5s, opacity .5s
      &.active
        background: #fff
        opacity: 1
    
#book-modal
  display: none
  background-color: white
  width: 980px
  height: 630px
  border: thin solid light-grey
  border-radius: 3px
  box-shadow: 0 0 5px hsla(0, 0%, 0%, 0.1)
  .left
    width: 300px
    height: 630px
    border-right: thin solid light-grey
    float: left
    box-sizing: border-box
    padding: 25px
    font-family: proxima-nova
    img
      width: 100%
    > .title
      font-size: 1.5em
      font-weight: bold
      color: green
      margin: 10px 0 2px
    .neighborhood
      color: dark-grey
      text-transform: uppercase
      font-size: .8em
    .rooms
      margin: 25px 0 40px
      .room
        color: dark-grey
        &.people .icon
          background-image: url(/images/people-black.png)
        &.bedrooms .icon
          background-image: url(/images/bedrooms-black.png)
        &.baths .icon
          background-image: url(/images/baths-black.png)
    .booking
      background-color: hsl(0, 0%, 94%)
      padding: 20px
      color: hsl(0, 0%, 50%)
      border-radius: 3px
      .title
        text-transform: uppercase
        color: darker-grey
        font-size: .8em
        font-weight: bold
        margin-bottom: 10px
      .date
        margin-bottom: 2px
        span
          color: darker-grey
          font-weight: bold
  .right
    margin-left: 300px
    font-family: proxima-nova
    .top
      height: 75px
      border-bottom: thin solid light-grey
      box-sizing: border-box
      padding: 22px 0 0 30px
      > .step, .circle, .text-container, .text, .typcn
        display: inline-block
      > .step
        .circle
          width: 30px
          height: 30px
          background-color: grey
          border-radius: 20px
          position: relative
          .num
            position: absolute
            left: 11px
            top: 6px
            color: white
            font-size: .95em
        .text-container
          vertical-align: top
          margin: 6px 10px 0
          .text
            vertical-align: top
            color: grey
            text-transform: uppercase
            font-weight: bold
          .typcn
            font-size: 2em
            margin: -7px 10px 0 7px
            color: light-grey
        &.active
          .circle
            background-color: green
          .text
            color: green
    > .content
      .step
        display: none
        button
          padding: 10px 20px
        &.active
          display: block
        &.step1
          .section
            margin: 30px 30px 0
            border-bottom: thin solid light-grey
            .field
              margin-bottom: 15px
              .label
                color: dark-grey
                margin-top: 8px
                float: left
                width: 145px
              .control-container
                margin-left: 155px
                .control
                  width: 70px
                  display: inline-block
              &.guests
                .select2-container
                  width: 48px !important
              &.purpose
                .select2-container
                  width: 100px !important
              &.where
                .select2-container
                  width: 285px !important
                .label
                  margin-top: -1px
              &.additional
                .control
                  width: 95%
                  textarea
                    width: 100%
                    border-radius: 3px
                    resize: none
                    border: thin solid light-grey
                    margin-bottom: 10px
            &.times
              .field
                display: inline-block
                &:last-child
                  margin-left: 24px
              .select2-container
                width: 60px !important
          button
            margin: 28px 0 0 186px
        &.step2
          .content
            width: 400px
            margin: 50px auto
            .total
              color: white
              background-color: darker-grey
              box-sizing: border-box
              font-size: 1.5em
              padding: 16px 22px 20px
              border-radius: 3px
              height: 60px
              margin-bottom: 15px
              .text
                float: left
              .price
                font-weight: bold
                float: right
            .payment
              color: darker-grey
              .card
                margin: 10px 0 0 20px
                .text
                  display: inline-block
                  vertical-align: top
                  margin-top: 2px
                input
                  margin: 7px 10px 0 1px
                  display: inline-block
                  vertical-align: top
                img
                  margin-left: 10px
              .card-entry
                border: thin solid light-grey
                border-radius: 3px
                margin-top: 25px
                .title
                  margin-top: 20px
                  background-color: lighter-grey
                  padding: 10px
                  color: dark-grey
                  font-weight: bold
                  font-size: 1.1em
                  img
                    float: right
                .card-details
                  padding: 20px
                  .field
                    display: inline-block
                    .label
                      font-size: .75em
                      color: grey
                      text-transform: uppercase
                      font-weight: bold
                      margin-bottom: 5px
                    &.card-number
                      input
                        width: 185px
                        margin-right: 17px
                    &.expiry
                      input
                        width: 74px
                    &.cvc
                      margin: 12px 0 0 17px
                      input
                        width: 54px
            button
              text-transform: uppercase
              font-size: 1.1em
              margin-top: 25px
            .error
              color: red
              display: none
              margin: 26px 0 0 15px
              vertical-align: top
              transition: opacity .5s
              opacity: 0
              width: 260px

