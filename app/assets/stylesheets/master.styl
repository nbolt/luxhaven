@import url('http://fonts.googleapis.com/css?family=Oleo+Script+Swash+Caps|Roboto+Slab')

@keyframes spin
  0%
    transform:rotate(0deg)
  50%
    transform:rotate(-180deg)
  100%
    transform:rotate(-360deg)

@keyframes scale
  0%
    transform:scale(1)
  25%
    transform:scale(0.5)
  50%
    transform:scale(1)
  75%
    transform:scale(0.5)
  100%
    transform:scale(1)

grey         = hsl(0, 0%, 70%)
light-grey   = hsl(0, 0%, 85%)
lighter-grey = hsl(0, 0%, 95%)
dark-grey    = hsl(0, 0%, 40%)
darker-grey  = hsl(0, 0%, 30%)
red          = hsl(360, 90%, 45%)
green        = hsl(159, 64%, 47%)
light-green  = hsla(159, 64%, 47%, 8%)

placeholder-color(color)
  ::-webkit-input-placeholder
    color: color
  :-moz-placeholder
    color: color
  ::-moz-placeholder
    color: color
  :-ms-input-placeholder
