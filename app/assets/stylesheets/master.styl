@keyframes spin
  0%
    transform:rotate(0deg)
  50%
    transform:rotate(-180deg)
  100%
    transform:rotate(-360deg)

@keyframes scale
  0%
    transform:scale(1)
  25%
    transform:scale(0.5)
  50%
    transform:scale(1)
  75%
    transform:scale(0.5)
  100%
    transform:scale(1)

