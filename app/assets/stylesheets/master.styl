@import url('http://fonts.googleapis.com/css?family=Oleo+Script+Swash+Caps|Roboto+Slab')


grey         = hsl(0, 0%, 70%)
light-grey   = hsl(0, 0%, 85%)
dark-grey    = hsl(0, 0%, 40%)
darker-grey  = hsl(0, 0%, 30%)
red          = hsl(360, 90%, 45%)
green        = hsl(159, 73%, 41%)

placeholder-color(color)
  ::-webkit-input-placeholder
    color: color
  :-moz-placeholder
    color: color
  ::-moz-placeholder
    color: color
  :-ms-input-placeholder
    color: color

dragging()
  *
    cursor: -webkit-grabbing !important
    cursor: -moz-grabbing !important

.dragging
  dragging()

a
  text-decoration: none

button
  background: none
  border: none
  &.green
    color: white
    background-color: green
    padding: 6px 14px
    border-radius: 3px
    font: .9em proxima-nova
    hover-lighten: 3

input
  border-radius: 3px
  border: thin solid light-grey
  box-sizing: border-box
  font: .9em proxima-nova
  font-weight: 600
  padding: 8px 12px

html
  height: 100%

body
  margin 0
  height: 100%

.modal
  display: none
  border: thin solid hsl(0, 0%, 75%)
  width: 405px
  background-color: white
  .luxhaven
    overflow: auto
    margin: 40px auto
  .message
    text-align: center
    margin-top: 12px
    font: .9em proxima-nova
    a
      color: hsl(0, 0%, 65%)
      &:hover
        color: green
        cursor: pointer
  .auth-error
    visibility: hidden
    text-align: center
    color: red
    font: 1em proxima-nova
    margin-top: 16px
    height: 19px
  form
    button
      width: 100%
      border-radius: 0
      margin-top: 15px
      padding: 10px
      font-size: 1em
    .input
      width: 310px
      margin: 10px auto
      placeholder-color: hsl(0, 0%, 79%)
      input
        color: hsl(0, 0%, 55%)
        width: 100%
  &#sign-in
    height: 325px
  &#sign-up
    height: 460px

.luxhaven
  width: 140px
  .name
    margin: 5px 0 0 40px
    font: 1.1em proxima-nova
    font-weight: 800
    color: hsl(0, 0%, 19%)
    text-transform: uppercase
  .logo
    float: left

header
  overflow: hidden
  height: 80px
  background-color: white
  box-shadow: 0 -1px 8px black
  opacity: .975
  position: absolute
  top: 0
  left: 0
  right: 0
  z-index: 1
  .pad
    margin: 25px auto
    width: 980px
    nav
      display: inline-block
      &.right, &.left
        margin-left: 50px
        a
          font: .9em proxima-nova
          color: hsl(0, 0%, 37%)
      &.left
        margin-left: 35px
        a
          margin-left: 25px
          font-weight: bold
          text-transform: uppercase
          &:hover
            color: green
      &.right
        float: right
        a
          margin-left: 15px
          font-weight: 400
          &:hover
            border-bottom: thin solid green
        button
          margin-left: 20px

.head-image
  background-size: cover !important
  z-index: 0
  position: relative
  .overlay-container
    position: absolute
    left: 50%
    .overlay
      position: relative
      left: -50%
      color: white
      font-family: proxima-nova

.account-content
  margin: 150px auto
  width: 980px
  text-align: center

.booking-content
  margin: 150px auto
  width: 980px
  text-align: center

#home
  background: url(/images/home.jpg) no-repeat
  height: 800px
  .overlay-container
    width: 965px
    bottom: 80px
    .overlay
      .title
        width: 450px
        font: 2.5em adelle
        font-weight: bold
        text-shadow: 1px 1px 2px black
      .house-info
        float: right
        text-align: right
        border-right: 4px solid white
        padding-right: 15px
        line-height: 23px
        .name
          font-weight: 600
        .location
          color: hsl(360, 0.5%, 85%)
          font-weight: 300
          font-size: .9em
          text-transform: uppercase
      button
        margin-top: 25px
        font-size: 1em
        text-transform: uppercase
        padding: 10px 18px

#city
  height: 375px
  .overlay-container
    top: 200px
    .overlay
      .title
        text-align: center
        font-size: 2em
        padding: 16px 28px
        background: hsla(0, 0%, 0%, 80%)

#results
  width: 976px
  margin: auto
  .left
    width: 250px
    float: left
    padding-right: 30px
    border-right: thin solid grey
    #filters
      > .title
        text-transform: uppercase
        font: .95em proxima-nova
        font-weight: bold
        color: darker-grey
        padding: 21px 0
        margin-bottom: 21px
        border-bottom: thin solid grey
      .filter-category
        margin-bottom: 100px
        .title
          width: 100%
          text-transform: uppercase
          font: .85em proxima-nova
          font-weight: bold
          color: darker-grey
          padding-bottom: 5px
          border-bottom: thin solid light-grey
        .filter
          margin-top: 8px
          & ~ .filter
            margin-top: 0
          label
            font: .8em proxima-nova
            font-weight: bold
            color: dark-grey
            display: inline-block
            padding: 8px
      > input, select
        width: 100%
      > input
        margin-bottom: 10px
        color: darker-grey
      .select2-container
        margin-bottom: 10px
        a
          background: none
          border: thin solid light-grey
          padding: 4px 12px 3px
          border-radius: 3px
          &:focus
            outline: none
          span
            color: darker-grey
            font: .9em proxima-nova
            font-weight: bold
            margin-top: 3px
          div
            border: none
            background: none
            top: 3px
            right: 2px
        &.select2-dropdown-open
          a
            border-radius: 3px 3px 0 0
  .right
    overflow: auto
    .top
      margin: 0 29px
      padding: 19px 0 20px
      border-bottom: thin solid grey
      font-family: proxima-nova
      font-weight: bold
      color: darker-grey
      .title
        font-size: 1.1em
      .sort
        float: right
        .text
          text-transform: uppercase
          font-size: .8em
          display: inline-block
        .select2-container
          width: 135px !important
          a
            background: none
            border: none
            padding: 4px 0 3px 12px
            border-radius: 3px
            &:focus
              outline: none
            span
              color: green
              font: .9em proxima-nova
              font-weight: bold
              margin-top: 3px
            div
              border: none
              background: none
              top: 3px
              right: 2px
          &.select2-dropdown-open
            a
              border-radius: 3px 3px 0 0
    .listing
      height: 100px
      background-color: grey
      margin: 30px

.select2-drop
  border: thin solid light-grey !important
  .select2-result-label
    font: .95em proxima-nova
  &.city
    border-top: none !important
    

.slider
  position: relative
  overflow: auto
  width: 100%
  margin-top: 10px
  margin-bottom: 50px
  margin-left: 0px
  padding-bottom: 4px
  .title
    float: left
    font: .9em proxima-nova
    font-weight: bold
    color: hsl(0, 0%, 55%)
  > .selection
    font: .85em proxima-nova
    font-weight: bold
    float: right
    color: darker-grey
    .knob-one, .knob-two
      display: inline-block
  .bar
    margin-top: 28px
    background-color: hsl(0, 0%, 92%)
    height: 5px
    border-radius: 5px
    border: thin solid grey
  .knob
    width: 12px
    height: 12px
    border-radius: 10px
    border: thin solid darker-grey
    position: absolute
    top: 24px
    simple-gradient(hsl(159, 50%, 50%), 15%)
    &.one
      left: 0px
    &.two
      right: 0px
    &:hover
      cursor: -webkit-grab
      cursor: -moz-grab

.images
  position: relative
  overflow: auto
  ul
    padding: 0
    margin: 0
    li
      list-style: none
      float: left
      background-size: cover !important
      height: 500px
      width: 100%
  .dots
    text-align: center
    position: absolute
    left: 0
    right: 0
    bottom: 0
    li
      display: inline-block
      width: 10px
      height: 10px
      margin: 0 4px      
      text-indent: -999em
      border: 2px solid #fff
      border-radius: 6px
      cursor: pointer
      opacity: .4
      transition: background .5s, opacity .5s
      &.active
        background: #fff
        opacity: 1
    
#book-modal
  display: none
  background-color: white
  width: 980px
  height: 500px
  border: thin solid light-grey
  border-radius: 3px
  box-shadow: 0 0 5px hsla(0, 0%, 0%, 0.1)

.listing-content
  width: 976px
  min-height: 500px
  margin: auto
  position: relative
  #book
    border-radius: 3px
    position: absolute
    right: 0
    top: -54px
    background-color: hsl(360, 2.5%, 92%)
    width: 250px
    .input
      margin: auto
      width: 90%
      margin-bottom: 10px
      input
        width: 100%
        color: darker-grey
    .button
      margin: 15px auto
      button
        width: 100%
        border-radius: 0
    .title
      text-shadow 1px 1px 4px white
      padding: 10px 15px
      font: .9em proxima-nova
      color: darker-grey
  .tabs
    .tab-content
      width: 700px
      .tab
        display: none
        margin: 5px 5px
        &.active
          display: block
        &#local-area
          .top
            height: 25px
            a
              float: right
          #map
            height: 400px
            width: 100%
    nav
      margin-top: 25px
      a
        .tab
          display: inline-block
          border-radius: 3px
          padding: 6px 8px
          margin: 0 5px
          color: green
          font: 1em proxima-nova
        &:hover .tab, &.active .tab
          background-color: green
          color: white