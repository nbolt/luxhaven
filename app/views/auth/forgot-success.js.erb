angular.element('#modal button').removeClass('disabled')
auth_error = $('#modal .auth-rsp')

display_error = function(){
  auth_error.addClass('success')
  auth_error.text("We've sent you an email with further instructions.")
  auth_error.fadeIn()
}

if (auth_error.css('display') == 'none') {
  display_error()
} else {
  auth_error.fadeOut(400, function(){
    display_error()
  })
}